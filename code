    <script>
        // الكود الخاص بالـ JavaScript هنا
        // يمكنك تغيير قيم النسب والبيانات بشكل دينامي وفقًا لاحتياجاتك
        document.getElementById('goal-percentage').textContent = '75%';
        document.getElementById('goals-count').textContent = '5';
        document.getElementById('mental-health-status').textContent = '60%';
        document.getElementById('learning-percentage').textContent = '80%';

        let evaluation, tip;
        if (parseInt(document.getElementById('mental-health-status').textContent) >= 70) {
            evaluation = 'جيد جدًا';
            tip = 'أنت على الطريق الصحيح، استمر!';
        } else if (parseInt(document.getElementById('mental-health-status').textContent) >= 40) {
            evaluation = 'جيد';
            tip = 'تحتاج إلى بعض التحسين، لا تستسلم!';
        } else {
            evaluation = 'سيئ';
            tip = 'حان وقت التغيير، ابدأ بخطوة اليوم!';
        }

        document.getElementById('evaluation-status').textContent = evaluation;
        document.getElementById('motivation-tip').textContent = tip;
    </script>
